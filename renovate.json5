{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Brussels)",
    ":maintainLockFilesWeekly",
    ":enablePreCommit"
  ],

  // --- GENERAL SETTINGS ---
  "enabled": true,
  // "baseBranches": ["main"], // Optional: explicit base branch

  // --- NOISE REDUCTION ---
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  
  // --- PR APPEARANCE ---
  "labels": ["dependencies", "renovate"],
  "assignees": ["danne-jm"],

  // --- AUTOMERGE SETTINGS (FIXED) ---
  // "automerge": true is global, but usually better to set per packageRule to avoid accidents.
  // We enable it here, but platformAutomerge is the key for your CI timing issue.
  "automerge": true,
  "platformAutomerge": true, // Uses GitHub's native "Enable Auto-merge"
  "automergeType": "pr",     // Create PR -> Wait for CI -> Merge

  // --- PACKAGE RULES ---
  "packageRules": [
    // 1. Minor/Patch Updates: Safe to merge
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    // 2. Major Updates: Risky, but you requested automerge.
    // Labeled clearly so you can spot them in the dashboard.
    {
      "matchUpdateTypes": ["major"],
      "automerge": true, 
      "labels": ["dependencies", "breaking-change"]
    }
  ],

  // --- LOCK FILE MAINTENANCE ---
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"],
    "automerge": true
  },

  // --- VULNERABILITY ALERTS ---
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": []
  },
  
  "rangeStrategy": "bump"
}