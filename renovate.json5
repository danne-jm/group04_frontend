{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Brussels)",
    ":maintainLockFilesWeekly",
    ":enablePreCommit"
  ],

  // --- GENERAL SETTINGS ---
  "enabled": true,

  // --- NOISE REDUCTION ---
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,

  // --- PR APPEARANCE ---
  "labels": ["dependencies", "renovate"],
  "assignees": ["danne-jm"],

  // --- AUTOMERGE SETTINGS ---
  "automerge": true,
  "platformAutomerge": true, // Uses GitHub's native "Enable Auto-merge"
  "automergeType": "pr",     // Create PR -> Merge
  "ignoreTests": true,       // FORCE MERGE: Skips waiting for tests to pass

  // --- PACKAGE RULES ---
  "packageRules": [
    // 1. Minor/Patch Updates
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    // 2. Major Updates
    {
      "matchUpdateTypes": ["major"],
      "automerge": true,
      "labels": ["dependencies", "breaking-change"]
    }
  ],

  // --- LOCK FILE MAINTENANCE ---
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"],
    "automerge": true
  },

  // --- VULNERABILITY ALERTS ---
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": []
  },

  "rangeStrategy": "bump"
}